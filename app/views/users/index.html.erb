<body id="back">
    <div class="panel panel-default">
        <div class="panel-heading text-center">ユーザー一覧ページ</div>
        <div class="panel-body">
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th>&nbsp;&nbsp;image</th>
                        <th>name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <% @users.each do |user| %>

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= link_to "詳細ページへ", user_path(user) %>
                            </td>
                        </tr>

                    <% end %>

                </tbody>
            </table>

            <!-- ページネーション -->
            <span class="row">
                <span class="col-xs-1"></span>
                <span class="col-xs-10"><%= paginate @users, class: "paginate" %></span>
                <span class="col-xs-1"></span>
            </span>
        </div>
    </div>
</body>
