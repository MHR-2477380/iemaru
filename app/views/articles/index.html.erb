<body id="back">
    <div class="panel panel-default">
        <div class="panel-body">

            <!-- ランキング -->
            <%= render 'articles/rank', ranks: @ranks %>

            <!-- 新規投稿画面へのリンク -->
            <div class="row article_index_link">
                <div class="col-xs-12">
                    <%= link_to "購入レポートを投稿する！", new_article_path, class: 'col-xs-12 btn btn-default' %>
                </div>
            </div>

            <!-- キーワード検索画面 -->
            <%= render 'searches/search', records: @records %>

            <!-- レポート一覧 -->
            <div class="panel panel-default">
                <div class="panel-heading text-center">投稿された購入レポート一覧</div>
                <div class="panel-body">

                    <% @articles.each do |article| %>

                        <div class="col-xs-6">
                            <div class="article panel panel-default">
                                <div class="panel-heading text-center">
                                    <%= link_to article.user.name + "様邸", user_path(article.user) %>
                                </div>
                                <div class="panel-body text-center">

                                    <!-- 画像 -->
                                    <div>
                                        <%= attachment_image_tag article, :article_image, :fill, 300, 200, format: 'jpeg', class: "img-responsive center-block" %>
                                    </div>

                                    <!-- 詳細画面へのリンク -->
                                    <div class="action">
                                        <%= link_to "詳しくはこちら", article_path(article), class: "btn btn-default col-xs-12" %>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <% end %>

                    <!-- ページネーション -->
                    <div class="row">
                        <div class="col-xs-1"></div>
                        <div class="col-xs-10"><%= paginate @articles %></div>
                        <div class="col-xs-1"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>