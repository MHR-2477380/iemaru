<% if question.sympathized_by?(current_user) %>

    <%= link_to question_sympathizes_path(question), method: :delete, remote: true do %>
        <span class="reactionall">
            <i class= "glyphicon glyphicon-thumbs-up" aria-hidden="true" style="color: blue;"></i>
            <span><%= question.sympathizes.count %>人がこの質問に興味を持っています</span>
        </span>
    <% end %>

<% else %>

    <%= link_to question_sympathizes_path(question), method: :post, remote: true do %>
        <span class="reactionall">
            <i class= "glyphicon glyphicon-thumbs-up" aria-hidden="true"></i>
            <span><%= question.sympathizes.count %>人がこの質問に興味を持っています</span>
        </span>
    <% end %>

<% end %>