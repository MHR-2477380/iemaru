<body id="back">
    <p class="notice text-center"><%= notice %></p>
    <div class="panel panel-default">
        <div class="panel-heading text-center">
            <div class="panel-title">質問の編集</div>
        </div>
        <div class="panel-body ">

            <!-- 質問編集フォーム -->
            <%= form_with(model: @question, url: question_path(@question), local: true, method: :PATCH ) do |f| %>

                <table class="table table-hover table-inverse">
                    <tbody>
                        <tr>
                            <th>カテゴリー</th>
                            <td><%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: "選択して下さい")%></td>
                        </tr>
                        <tr>
                            <th>タイトル</th>
                            <td><%= f.text_field(:title) %></td>
                        </tr>
                        <tr>
                            <th>内容</th>
                            <td><%= f.text_area(:content) %></td>
                        </tr>
                        <tr>
                            <th>ステータス</th>
                            <td>
                                <%= f.select(:status, [["回答受付中", true],["回答済み", false]]) %>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <%= f.submit("更新する", class: "btn btn-default") %>

            <% end %>

        </div>
    </div>

    <!-- リンク -->
    <div class="question_show_link">
        <%= link_to "詳細画面へ戻る", question_path(@question), class: 'col-xs-12 btn btn-default' %>
    </div>

</body>
