<body id="top">

  <div class="sign panel panel-default">
    <div class="panel-body text-left">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <h3 class="welcome text-center"> Welcome back ! </h3>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-xs-12' %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'col-xs-12' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="field">
          <%= f.submit "Log in", class: 'col-xs-12 btn btn-default' %>
        </div>

      <% end %>

      <br>
      <br>
      <%= render "devise/shared/links" %>

    </div>
  </div>

</body>

